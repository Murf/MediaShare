<h3>Media</h3>
<div class="span8">
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Genre</th>
      <th>Imdb ID</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @media.each do |medium| %>
        <tr>
          <td><%= link_to medium.title, medium %></td>
          <td><%= medium.type %></td>
          <td><%= medium.genre %></td>
          <td><%= medium.imdb_id %></td>
          <td><%= link_to("Delete", medium_path(medium), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini')  %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New Media', new_medium_path, :class => 'btn btn-mini' %>
  <%  if (@unlinked_mediafiles) %>
      <br><br>There are unlinked Media Files
  <% end %>
</div>

