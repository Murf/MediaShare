<p id="notice"><%= notice %></p>

<p>
  <b>Filename:</b>
  <%= @mediafile.filename %>
</p>


<br>
<h4>Linked Media</h4>
<%=  link_to @mediafile.medium.title, @mediafile.medium  if @mediafile.medium%>   <br>
<br>

<% if (@movies) %>
    <h4>Alternative Media</h4>
    <br>
    <% @movies.each do |movie| %>
        <% if movie.type == "Movie" %>
          <%= link_to(movie.title, '/mediafiles/select/'+@mediafile.id.to_s+'?imdb_id='+movie.id+'&title='+movie.title+'&genre=')%>  <br>
        <% end %>
    <% end %>
    <br><br>
<% end %>

<h4>Manual Search</h4>


<%= simple_form_for :query, :url => url_for(:action => 'show', :controller => 'mediafiles'), :method => 'get' do |f| %>
    <%= f.input :name, :label => 'Enter your IMDB search query' %>
    <%= f.submit 'Search IMDB' %>
<% end %>

<%= link_to 'Back', :back %>
