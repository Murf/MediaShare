<h1>Listing mediafiles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Filename</th>
    <th>Relativepath</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mediafiles.each do |mediafile| %>
  <tr>
    <td><%= mediafile.title %></td>
    <td><%= mediafile.filename %></td>
    <td><%= mediafile.relativepath %></td>
    <td><%= link_to 'Show', mediafile %></td>
    <td><%= link_to 'Edit', edit_mediafile_path(mediafile) %></td>
    <td><%= link_to 'Destroy', mediafile, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

