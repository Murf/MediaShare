<h3>Users</h3>
<div class="span12">
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Username</th>
      <th>Registered</th>
      <th>Last Login</th>
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.fullname, user %></td>
          <td><%= user.created_at.to_date %></td>
          <td><%= user.last_sign_in_at.to_date if user.last_sign_in_at %></td>
          <td>
            <% if current_user.has_role? :admin %>
                <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button"><%= user.roles.first.name.titleize %></a>
                <%= render user %>
            <% else %>
                <%= user.roles.first.name.titleize %>
            <% end %>
          </td>
          <% if current_user.has_role? :admin %>
              <td><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>